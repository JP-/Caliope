<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="etsiitdevs.caliope">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".LoginActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".RegistroActivity"
            android:label="@string/title_activity_registro"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".RegistroAlumnoActivity"
            android:label="@string/title_activity_registro_alumno"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".RegistroTutorActivity"
            android:label="@string/title_activity_registro_tutor"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".TutorActivity"
            android:label="@string/title_activity_principal"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".SettingsActivity"
            android:label="@string/title_activity_settings" />
        <activity
            android:name=".EditarAlumnoActivity"
            android:label="@string/title_activity_editar_alumno"
            android:parentActivityName=".AlumnoActivity"
            android:theme="@style/AppTheme.NoActionBar">

            <!-- Parent activity meta-data to support 4.0 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".AlumnoActivity" />
        </activity>
        <activity
            android:name=".EditarTutorActivity"
            android:label="@string/title_activity_editar_tutor"
            android:parentActivityName=".TutorActivity"
            android:theme="@style/AppTheme.NoActionBar">

            <!-- Parent activity meta-data to support 4.0 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".TutorActivity" />
        </activity>
        <activity
            android:name=".AlumnoActivity"
            android:label="@string/title_activity_alumno"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".JuegoAnimales"
            android:label="@string/title_activity_juego_animales"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>
